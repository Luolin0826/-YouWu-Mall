@import "./styles/iconfont.wxss";

/* 在微信小程序中，不支持通配符 */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 主题颜色 通过变量来实现 
1.less中存在变量这个知识
2.原生的css和wxss也支持变量
*/
page {
    /* 主题颜色 */
    --themeColor: #eb4458;
    /* 统一定义字体大小 */
    font-size: 28rpx;
}

image {
    width: 100%;
}